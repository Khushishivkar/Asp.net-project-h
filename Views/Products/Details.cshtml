@model CycleStoreStarter.Models.Product
@{
    ViewData["Title"] = Model.Name;
}
<div class="row">
  <div class="col-md-6">
    <img src="/images/@(Model.ImageFiles?.Split(',')[0])" class="img-fluid" />
  </div>
  <div class="col-md-6">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p><strong>â‚¹@Model.Price</strong></p>
    <form method="post" action="/Cart/Add">
      <input type="hidden" name="productId" value="@Model.Id" />
      <div class="mb-2">
        <label>Quantity</label>
        <input type="number" name="qty" value="1" min="1" class="form-control" style="width:100px" />
      </div>
      <button class="btn btn-primary">Add to cart</button>
    </form>
  </div>
</div>
